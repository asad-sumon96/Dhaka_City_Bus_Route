<%- include('partials/header') %>

<div
  class="flex flex-wrap-reverse items-center justify-center gap-8 py-10 px-4"
>
  <!-- Search Form Section -->
  <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg text-left">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">Find Your Bus</h1>
    <p class="text-gray-500 mb-6">
      Select your starting point and destination to find available bus services.
    </p>

    <form action="/find-buses" method="POST" class="space-y-4">
      <div>
        <label
          for="from-station"
          class="block text-sm font-medium text-gray-700 mb-1"
          >From</label
        >
        <select
          id="from-station"
          name="fromStation"
          required
          class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500"
        >
          <option value="" disabled selected>Select a starting station</option>
          <% stations.forEach(station => { %>
          <option value="<%= station.station_id %>">
            <%= station.station_name %>
          </option>
          <% }); %>
        </select>
      </div>
      <div>
        <label
          for="to-station"
          class="block text-sm font-medium text-gray-700 mb-1"
          >To</label
        >
        <select
          id="to-station"
          name="toStation"
          required
          class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500"
        >
          <option value="" disabled selected>Select a destination</option>
          <% stations.forEach(station => { %>
          <option value="<%= station.station_id %>">
            <%= station.station_name %>
          </option>
          <% }); %>
        </select>
      </div>
      <div>
        <button
          type="submit"
          class="w-full bg-red-600 hover:bg-red-500 text-white font-bold py-3 px-4 rounded-lg shadow-lg transition transform hover:scale-105"
        >
          Find Bus
        </button>
      </div>
    </form>
  </div>
  <!-- Image Section -->
  <div class="w-full max-w-lg">
    <img
      src="/images/bus.png"
      alt="Bus Illustration"
      class="w-full h-auto"
      onerror="this.onerror=null; this.src='https://placehold.co/500x400/fdfbf3/c7c7c7?text=Bus+Image';"
    />
  </div>
</div>

<%- include('partials/footer') %>
